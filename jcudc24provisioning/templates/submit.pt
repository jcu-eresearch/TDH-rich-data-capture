<tal:block tal:condition="view.isDelete">
    <script type="text/javascript" src="/static/scripts/jquery-1.8.0.min.js"></script>
    <script type="text/javascript" src="/static/scripts/jquery-ui-1.8.23.custom.min.js"></script>
    <script type="text/javascript" src="/deform_static/scripts/deform.js"></script>
    <script type="text/javascript" src="/deform_static/scripts/jquery.form.js"></script>
    <script type="text/javascript">
        deform.processCallbacks();
        $( "#dialog").dialog({ buttons: {
            "Yes": function() {
                deform.load();
                deform.processCallbacks();
                document.getElementById('deformDelete').value='confirmed';
                document.getElementById('deform').submit();
                document.location = loc + ((msg) ? '?msg=' + msg : '');
            },
            "No": function() {
                $(this).dialog("close");
            }
        } });
    </script>

    <div id="dialog" title="Confirm Project Deletion">
        <p>Are you sure you want to delete this project?</p>
    </div>
</tal:block>

<div tal:content="structure form">form</div>
