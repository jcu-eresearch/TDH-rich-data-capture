<div class="deformFileupload">
    <input type="hidden" name="__start__" value="${field.name}:mapping"/>

    <div class="deformReplaces" tal:condition="cstruct.get('uid')">

        <input type="hidden" name="uid" value="${cstruct['uid']}"
               id="${field.oid}-uid"/>
    <span id="${field.oid}-filename"><span class="deformClosebutton" onclick="$('#${field.oid}-uid')[0].value=''; $(parentNode).remove(); "></span> ${cstruct.get('filename')}</span>

    </div>
    <input type="file"
           tal:attributes="size field.widget.size;
                         class field.widget.css_class"
           id="${field.oid}"
           name="upload" />

    <input type="hidden" name="__end__" value="${field.name}:mapping"/>
</div>
