<span tal:omit-tag="">
    <tal:block define="default_value cstruct or field.schema.default or nothing">
        <input type="text" name="${field.name}" value="${default_value}"
               tal:attributes="size field.widget.size;
                               class (field.widget.css_class or '') + (default_value == field.schema.default and ' default_text' or '')"
               onclick="if (value == '${field.schema.default}') {className = className.replace( /(?:^|\s)default_text(?!\S)/g , '' ); value='';}"
               onblur="if (value == '') {value='${default_value}'; className += ' default_text';}"
               id="${field.oid}"/>

        <script tal:condition="field.widget.mask" type="text/javascript">
            deform.addCallback(
                    '${field.oid}',
                    function (oid) {
                        $("#" + oid).mask("${field.widget.mask}",
                                {placeholder:"${field.widget.mask_placeholder}"});
                    });
        </script>
        <script tal:condition="field.schema.default" type="text/javascript">
            type = "text/javascript" >
                    deform.addCallback(
                            '${field.oid}',
                            function (oid) {
                                submitClearsDefaultValues(oid, "${field.schema.default}");
                            });
        </script>
    </tal:block>
</span>
