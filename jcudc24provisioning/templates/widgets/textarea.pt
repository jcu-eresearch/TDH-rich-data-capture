<tal:block define="default_value cstruct or field.schema.default or nothing">
    <textarea tal:attributes="rows field.widget.rows;
                          cols field.widget.cols;
                          class field.widget.css_class or ''"
              id="${field.oid}" name="${field.name}"
              onclick="if (value == '${field.schema.default}') {className = className.replace( /(?:^|\s)default_text(?!\S)/g , '' ); value='';}"
              onblur="if (value == '') {value='${default_value}'; className += ' default_text';}">${default_value}</textarea>

    <script tal:condition="field.schema.default" type="text/javascript">
        type = "text/javascript" >
                deform.addCallback(
                        '${field.oid}',
                        function (oid) {
                            submitClearsDefaultValues(oid, "${field.schema.default}");
                        });
    </script>
</tal:block>
